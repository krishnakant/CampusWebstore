@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.iPhone.cshtml";
}
<link href="@Url.Content("~/Content/styles/mobile/jquery.mobile.css")" rel="stylesheet" type="text/css" />
<h2>
    Send password</h2>
<script type="text/javascript">

    setTimeout(function () { window.scrollTo(0, 1) }, 100);

    jQuery(document).ready(function () {

        jQuery("#btnSubmit").click(function () {

            jQuery("#imgLoading").show();

            jQuery.ajax({
                type: 'POST',
                dataType: 'json',
                url: '@Url.Action("JsonForgotPassword","Account")',
                data: {
                    UserName: jQuery("#txtUsername").val()
                },
                success: function (data) {

                    jQuery("#imgLoading").hide();

                    if (data.success) {

                        alert('Password has been sent to your email address');

                    } else {

                        jQuery("#lblError").html(data.errorMsg).show();
                    }
                }
            });
        });
    });
   
</script>


