@model IEnumerable<CampusWebSotre.Models.OrderViewModel>
@{
    Layout = null;
}
@if (Model.Any())
{
  <h2 class="sub_heading"> Order History</h2>
                    <table width="100%" cellspacing="0" cellpadding="0" border="0">
                    <tr>
                    	<td>
                           <table cellpadding="0" cellspacing="0" class="orderhistory mar_ri10px" border="0"  rules="cols" style="width:376px;">
                                <tr>
                                    <th class="orderhistorybg" colspan="4">Open Orders:</th>
                                    </tr>
                                    <tr class="heding">
                                        <th scope="col">Order Number</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                       @foreach (var m in Model)
                                                {
                                                    if (!m.Status.ToLower().Equals("processed") && !m.ConfNumber.Equals("NO CLOSED ORDERS"))
                                                    {
                                                    
                                                            <tr>
                                                                <td><a href="#" onclick="javascript:ShowCustomerOrderDetail('@m.UserId','@m.OrderId');">@m.OrderId</a></td>
                                                                <td>@m.DatePlaced</td>
                                                                <td>@m.Amount</td>
                                                                <td>@m.Status</td>
                                                            </tr>
                                                       
                                                    }
                                                    else   if (m.ConfNumber.Equals("NO OPEN ORDERS"))
                                                        {
                                                            <tr><td><a href="#" onclick="javascript:ShowCustomerOrderDetail('@m.UserId','@m.OrderId');">@m.OrderId</a></td>
                                                                <td>@m.DatePlaced</td>
                                                                <td>@m.Amount</td>
                                                                <td>@m.Status</td>
                                                            </tr>
                                                              
                                                        }
    
                                                }
                                    </table>
                                </td>                                
                              <td>
                              	<table cellpadding="0" cellspacing="0" class="orderhistory mar_ri10px" border="0" rules="cols" style="width:376px;">
                    				<tr>  
                                		<th class="orderhistorybg" colspan="4">Closed Orders:</th>
                            		</tr>
                           			<tr class="heding">
                                        <th scope="col">Order Number</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                            @foreach (var m in Model)
                                            {
                                                if (m.Status.ToLower().Equals("processed") && !m.ConfNumber.Equals("NO OPEN ORDERS"))
                                                {
                                                    <tr>
                                                        <td><a href="#" onclick=" javascript:ShowCustomerOrderDetail('@m.UserId','@m.OrderId');">@m.OrderId</a></td>
                                                        <td>@m.DateProcessed</td>
                                                        <td>@m.Amount</td>
                                                        <td>@m.Status</td>
                                                    </tr>

                                                }
                                                else if (m.ConfNumber.Equals("NO CLOSED ORDERS"))
                                                {
                                                    <tr>
                                                        <td><a href="#" onclick=" javascript:ShowCustomerOrderDetail('@m.UserId','@m.OrderId');">@m.OrderId</a></td>
                                                        <td>@m.DateProcessed</td>
                                                        <td>@m.Amount</td>
                                                        <td>@m.Status</td>
                                                    </tr>

                                                }
                                            }
                                                </table>
                                     
                                </td>
                            </tr>
                    </table>              
}
    

