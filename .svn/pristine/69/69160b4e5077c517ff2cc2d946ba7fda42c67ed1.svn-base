@model CampusWebSotre.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_Layout.iPhone.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@*<link href="@Url.Content("~/Content/jquery.mobile-1.0b2.css")" rel="stylesheet" type="text/css" />*@
<style>
    span.select
    {
        position: absolute;
        width: 90px; /* With the padding included, the width is 190 pixels: the actual width of the image. */
        height: 22px;
        color: #000;
        cursor: pointer;
        font: 12px/21px arial,sans-serif;
        overflow: hidden;
    }
    
    .styled
    {
        position: absolute !important;
        width: 161px; /* With the padding included, the width is 190 pixels: the actual width of the image. */
        height: 22px;
        padding: 4px 0 5px 1px;
        color: #000;
        cursor: pointer;
    }
    
    select.styled
    {
        opacity: 0;
        position: relative;
        width: 150px;
        z-index: 5;
        margin: 0px;
    }
    
    .selectbg
    {
        background: url(@Url.Content("~/Content/Images/Elements/select_main_bg.png")) no-repeat;
        width: 160px;
        height: 22px;
        padding: 4px 0 5px 7px;
    }
    
    .third
    {
        width: 161%;
        float: left;
    }
</style>
<div id="headerproduct">
    <!--header-->
    <img src="@Url.Content("~/Content/Images/bar_top.png")" style="vertical-align: top;" width="320" />
</div>
<div class="cartcontainer">
    <div id="form">
      
          @Html.Partial("EditorTemplates/MobileHeader");
        <div class="clear">
        </div>
        <div class="bradecumpro">
            <a href="#" class="left">Log On</a>
        </div>
        <div class="clear">
        </div>
        <div>
            @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
            @using (Html.BeginForm((string)ViewBag.FormAction, "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }))
            {
                <div data-role="fieldcontain">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div data-role="fieldcontain">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
              
                 
                <div class="clear">
                </div>
                <div>
                    <input type="submit" style="height: 30px;" value="Log On" /></div>
              
                <p>
                    @Html.ActionLink("Forgot your password? ", "ForgotPassword") &nbsp; @Html.ActionLink("Create New User", "CreateNewUser")
                    if you don't have an account.
                </p> <div class="clear">
                </div>
            }
        </div>
        <div class="clear">
        </div>
        <div class="footerTextbook productfoot">
        </div>
       
    </div>
    <span class="clr"></span>
</div>
