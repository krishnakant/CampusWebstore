<script type="text/javascript">
$(document).ready(function(){
$("#MeetingDate").datepicker
({
dateFormate: 'yy/mm/dd',
showStatus: true,
showWeeks: true,
currentText: 'Now',
autoSize: true,
gotoCurrent: true,
showAnim: 'blind',
highlightWeek: true
});
});

$(document).ready(function () {
    $('#StartTime').timepicker({});
    $('#EndTime').timepicker({});
});

//$(document).ready(function () {
