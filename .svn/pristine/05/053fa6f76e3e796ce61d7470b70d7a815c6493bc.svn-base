@{
    ViewBag.Title = "MyAccount";
    
    Layout = "~/Views/Shared/_Layout.iPhone.cshtml";

    var acctype = Convert.ToString(Session["ACCTYPE"]);
     
}

<h2>My account - Manage Account</h2>
<table cellpadding="2" cellspacing="2" border="0" class="maincontent">
        <tr>
            <td valign="top" class="maincontent">
                <center>
                    <table cellpadding="5" cellspacing="5" border="0" width="100%">
                        <tr>
                            <td valign="top" width="25%">
                                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                    <tr>
                                        <td>
                                            <center>
                                                <a href="@Url.Action("AccountDetails","Account")"><img src="Images/accountdetail.png" alt="accountdetail" border="0" /></a>
                                                <a href="@Url.Action("AccountDetails","Account")">Account Details</a>
                                            </center>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td valign="top" width="25%">
                                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                    <tr>
                                        <td>
                                            <center>
                                                <a href="#"><img src="Images/orderhist.png" alt="accountdetail" border="0" /></a>
                                                <a href="#">Order History</a>
                                            </center>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                          
                            <td valign="top" width="25%" >
                                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                    <tr>
                                        <td>
                                             @{
                                                 if (acctype == "A")
                                                 {
                                                     <text>
                                                         <center>
                                                             <a href="#"><img src="Images/adminpanel.png"  alt="admin" border="0" /></a>
                                                             <a href="#">Admin Panel</a>
                                                         </center>
                                                     </text>
                                                 }
                                             }
                                           
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td valign="top" width="25%"  style="display: none;">
                                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                    <tr>
                                        <td>
                                             @{
                                                 if (acctype == "F")
                                                 {
                                                     <text>
                                                         <center>
                                                             <a href="#"><img src="Images/faculty.png"  alt="admin" border="0" /></a>
                                                             <a href="#">Faculty</a>
                                                         </center>
                                                     </text>
                                                 }
                                             }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </center>
            </td>
        </tr>
    </table>

