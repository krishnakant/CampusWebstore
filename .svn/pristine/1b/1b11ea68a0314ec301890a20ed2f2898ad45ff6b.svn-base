@model IEnumerable<CampusWebStore.Shared.Models.ShoppingCartModel>
@{
    var lstQty = new List<SelectListItem>();

    for (var i = 1; i <= 30; i++)
    {
        lstQty.Add(new SelectListItem { Text = i.ToString(), Value = i.ToString() });

    }
    
    
}

@{if (Model.Any())
  {
    <table id="itemGrid" cellpadding="0" cellspacing="0" border="0" class="tXtBook carttable">
        <tr style="background-color:Purple">
            <th width="40%">
                Item
            </th>
            <th>
                Detail
            </th>
            <th>
                Type
            </th>
            <th>
                Qty
            </th>
            <th>
                Price
            </th>
            <th>
                Total
            </th>
        </tr>
        @{ var j = 0;
           var clase = "odd"; }
        @foreach (var m in Model)
        {
            if (j % 2 == 0)
            {

                clase = "even";

            }

            var id = @m.Id.Replace("*", "-");
            var ddlId = "#" + id;
            <tr class="@clase">
                <td>@MvcHtmlString.Create(@m.Title)
                </td>
                <td>@m.Detail
                </td>
                <td>@m.Type
                </td>
                <td>@m.ActualPrice
                </td>
                <td>@Html.DropDownList(m.Isbn, lstQty, new { @onchange = "javascript:CalculateTotal('" + @id + "')", @id = @id, @selected = @m.Qty })
                </td>
                <script type="text/javascript">$("@ddlId").val(@m.Qty); </script>
                <td class="lastborder"> <a href="#" onclick='javascript:RemoveCartItem("@id");'>@m.Total
                    <img alt="X" src="@Url.Content("~/Content/Images/Mobile/Delete_Black.png")" /></a>
                </td>
            </tr>
        
        
       
        }
    </table>
    <br />
    <br />
    <div  style="padding:10px;" id="divfooter">@Html.ActionLink("Checkout", "Checkout", "Account","", new { @class = "buyNew" })</div>
    
  }
}
