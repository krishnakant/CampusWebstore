                                                            <td>
                                                                @m.Amount
                                                            </td>
                                                            <td>
                                                                @m.Status
                                                            </td>
                                                        </tr>
                                                   
                                                }
                                                else
                                                {
                                                    if (m.ConfNumber.Equals("NO OPEN ORDERS"))
                                                    {
                                                        
                                                                <tr>
                                                                    <td>
                                                                        <a href="#" onclick="javascript:ShowCustomerOrderDetail('df','dfd');">
                                                                            NO OPEN ORDERS</a>
