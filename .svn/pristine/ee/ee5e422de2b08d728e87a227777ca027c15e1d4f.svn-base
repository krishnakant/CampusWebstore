                                                    border-collapse: collapse;" id=""
                                                    font-familty="arial" rules="cols">
                                                    <tbody>
                                                        <tr style="color: Black; background-color: #D3CEB7;">
                                                            <th scope="col">
                                                              Order Number
                                                            </th>
                                                            <th scope="col">
                                                                Date
                                                            </th>
                                                            <th scope="col">
                                                                Amount
                                                            </th>
                                                            <th scope="col">
                                                                Status
                                                            </th>
                                                        </tr>
                                            @foreach (var m in Model)
                                            {
                                                if (m.Status.ToLower().Equals("processed"))
                                                {
                                               
                                                        <tr>
                                                            <td>
                                                                <a href="#" onclick="javascript:ShowCustomerOrderDetail('@m.UserId','@m.OrderId');">
                                                                    @m.OrderId</a>
