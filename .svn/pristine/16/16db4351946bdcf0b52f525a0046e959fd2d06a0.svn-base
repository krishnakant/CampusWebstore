            //***********************************************************jwqeury post tfill the ddl course***************************************************************
            $.ajax({

                type: "GET",

                url: '@Url.Action("GetSections", "Home")',

                data: { StoreID: storeId, TermID: termId, DeptID: deptId, CourseID: courseId },

                success: function (data, status, xhr) {
