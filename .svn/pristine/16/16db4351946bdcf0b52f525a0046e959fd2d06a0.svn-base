                    var itemsWithName = "";

                    itemsWithName += storeId + "," + selectedStore + "," + termId + "," + selectedTerm + ",";

                    itemsWithName += deptId + "," + selectedDept + "," + courseId + "," + selectedCourse + "," + sectionId + "," + selectedSection + "_";

