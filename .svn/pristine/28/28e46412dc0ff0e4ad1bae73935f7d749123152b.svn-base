@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <div class="editor-label">
        @Html.LabelFor(model => model.FacultyAdminEmail)
    </div>
    
    <div class="editor-field">
        @Html.EditorFor(model => model.FacultyAdminEmail)
        @Html.ValidationMessageFor(model => model.FacultyAdminEmail)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.FacutlySecondaryEmail)
    </div>
    
    <div class="editor-field">
        @Html.EditorFor(model => model.FacutlySecondaryEmail)
        @Html.ValidationMessageFor(model => model.FacutlySecondaryEmail)
    </div>
    <br />
    <input type="submit" value="Update" />
    <br />
    
    <a href="#" id="showTermList">View Terms Faculty is allowed to add adoptions to
    </a>
    <br /> <br />
    <div id="termList">
    </div>
    
}